<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/background_blue"
    app:cardElevation="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_review_list">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/image_user"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/ic_profil_pic"
                tools:ignore="ContentDescription"
                tools:srcCompat="@drawable/ic_profil_pic" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="8dp">
                <TextView
                    android:id="@+id/review_text_email"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/primary_black"
                    android:textSize="16sp"
                    android:gravity="start"
                    android:text="@string/base_null"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start">
                    <LinearLayout
                        android:id="@+id/score_wrapper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start">
                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="2dp"
                        android:background="@color/secondary_yellow"/>
                    <TextView
                        android:id="@+id/review_text_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/primary_yellow"
                        android:textSize="12sp"
                        android:text="@string/base_null"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/review_text_tanggal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/primary_grey"
                    android:textSize="12sp"
                    android:text="@string/base_null" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/review_text_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/secondary_grey"
            android:textSize="14sp"
            android:text="@string/base_null"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>