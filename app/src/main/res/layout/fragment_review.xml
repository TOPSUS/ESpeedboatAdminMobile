<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EAF8FF"
    tools:context=".ui.review.ReviewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/bg_review_gradient"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="32dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/total_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/base_null"
                android:textColor="@color/base_blue"
                android:textSize="36sp" />

            <LinearLayout
                android:id="@+id/total_score_wrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:orientation="horizontal">
            </LinearLayout>

            <TextView
                android:id="@+id/total_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/base_null"
                android:textColor="@color/base_blue"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="5"
                    android:textColor="@color/base_blue"
                    android:textSize="10sp" />

                <ProgressBar
                    android:id="@+id/review_progress_5"
                    android:layout_width="match_parent"
                    android:progress="0"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:progressDrawable="@drawable/progressbar_fill"
                    style="?android:attr/progressBarStyleHorizontal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="4"
                    android:textColor="@color/base_blue"
                    android:textSize="10sp" />

                <ProgressBar
                    android:id="@+id/review_progress_4"
                    android:layout_width="match_parent"
                    android:progress="0"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:progressDrawable="@drawable/progressbar_fill"
                    style="?android:attr/progressBarStyleHorizontal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="3"
                    android:textColor="@color/base_blue"
                    android:textSize="10sp" />

                <ProgressBar
                    android:id="@+id/review_progress_3"
                    android:layout_width="match_parent"
                    android:progress="0"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:progressDrawable="@drawable/progressbar_fill"
                    style="?android:attr/progressBarStyleHorizontal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="2"
                    android:textColor="@color/base_blue"
                    android:textSize="10sp" />

                <ProgressBar
                    android:id="@+id/review_progress_2"
                    android:layout_width="match_parent"
                    android:progress="0"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:progressDrawable="@drawable/progressbar_fill"
                    style="?android:attr/progressBarStyleHorizontal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="1"
                    android:textColor="@color/base_blue"
                    android:textSize="10sp" />

                <ProgressBar
                    android:id="@+id/review_progress_1"
                    android:layout_width="match_parent"
                    android:progress="0"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:progressDrawable="@drawable/progressbar_fill"
                    style="?android:attr/progressBarStyleHorizontal"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_review"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" />
</LinearLayout>