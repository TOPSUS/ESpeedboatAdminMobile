<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tetry_base"
    tools:context=".ui.home.HomeFragment">
    <LinearLayout
        android:paddingTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        android:weightSum="@integer/config_navAnimTime"
        app:layout_constraintHorizontal_weight="@integer/config_navAnimTime"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Overview"
            android:fontFamily="@font/roboto_bold"
            android:textSize="25dp"
            android:textColor="#213335"
            tools:ignore="MissingConstraints" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quick Report and Review"
            android:fontFamily="@font/roboto_medium"
            android:textSize="14dp"
            android:textColor="#AAAAAA"
            tools:ignore="MissingConstraints" />
    </LinearLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:gravity="center"
            android:weightSum="@integer/config_navAnimTime"
            app:layout_constraintHorizontal_weight="@integer/config_navAnimTime"
            tools:ignore="MissingConstraints">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="34dp"
                android:layout_marginEnd="34dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:padding="12dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/square">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ticket_icon"/>
                    <LinearLayout
                        android:paddingLeft="15dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="left"
                            android:textSize="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ticket Sale Today"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/black"/>
                        <TextView
                            android:gravity="left"
                            android:textSize="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="15 Maret 2021"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="#AAAAAA"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <TextView
                                android:textSize="50dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="100"
                                android:fontFamily="@font/roboto_bold"
                                android:textColor="@color/primary_base"/>
                            <TextView
                                android:paddingLeft="7dp"
                                android:textSize="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="| Ticket"
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="#AAAAAA"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="34dp"
                android:layout_marginEnd="34dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:padding="12dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/square">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/transaction_icon"/>
                    <LinearLayout
                        android:paddingLeft="15dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="left"
                            android:textSize="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Transaction Success Today"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/black"/>
                        <TextView
                            android:gravity="left"
                            android:textSize="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="15 Maret 2021"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="#AAAAAA"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <TextView
                                android:textSize="50dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="100"
                                android:fontFamily="@font/roboto_bold"
                                android:textColor="@color/primary_base"/>
                            <TextView
                                android:paddingLeft="7dp"
                                android:textSize="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="| TXN"
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="#AAAAAA"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="34dp"
                android:layout_marginEnd="34dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:padding="12dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/square">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/review_icon"/>
                    <LinearLayout
                        android:paddingLeft="15dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="left"
                            android:textSize="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Review Count Today"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/black"/>
                        <TextView
                            android:gravity="left"
                            android:textSize="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="15 Maret 2021"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="#AAAAAA"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <TextView
                                android:textSize="50dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="100"
                                android:fontFamily="@font/roboto_bold"
                                android:textColor="@color/primary_base"/>
                            <TextView
                                android:paddingLeft="7dp"
                                android:textSize="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="| Review"
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="#AAAAAA"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>